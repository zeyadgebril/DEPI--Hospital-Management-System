@model MedicalReportAddEditeVM

@{
    ViewData["Title"] = "Edite Medical Report";
    SelectList patientOption = new SelectList(Model.PatientList, "Id", "Name");

}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h1 class="text-center text-primary">Edite Medica Report</h1>
        <h5 class="text-secondary text-center mb-4">Create a new appointment entry</h5>
        <form method="post" asp-action="SaveEdit" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <input asp-for="DoctorId" type="hidden" />
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ReportDate" class="form-label"></label>
                <input asp-for="ReportDate" type="datetime-local" class="form-control" readonly />
                <span asp-validation-for="ReportDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PatientId" class="form-label"></label>
                <select asp-for="PatientId" class="form-select" asp-items="patientOption">
                    <option value="0">-- Select Patient --</option>
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>


            <div class="form-group mb-3">
                <label asp-for="Diagnosis" class="form-label"></label>
                <input asp-for="Diagnosis" class="form-control" />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Prescription" class="form-label"></label>
                <input asp-for="Prescription" class="form-control" />
                <span asp-validation-for="Prescription" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
                <a asp-action="GetAll" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}