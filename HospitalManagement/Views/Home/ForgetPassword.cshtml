@{
    Layout = null;
    ViewData["Title"] = "Forget Password";
}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link rel="icon" type="image/png" href="./assets/img/favicon.png" />
    <title>Forgot Password</title>
  </head>
  <body>
    <section class="bg-light p-3 p-md-4 p-xl-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-xxl-11">
            <div class="card border-light-subtle shadow-sm">
              <div class="row g-0">
                <div class="col-12 col-md-6">
                                <img class="img-fluid rounded-start w-100 h-100 object-fit-cover"
                                     loading="lazy"
                                     src="@Url.Content("~/assets/img/Login/doctors Login.png")"
                                     alt="Welcome back you've been missed!" />
                </div>
                <div
                  class="col-12 col-md-6 d-flex align-items-center justify-content-center"
                >
                  <div class="col-12 col-lg-11 col-xl-10">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                      <div class="row">
                        <div class="col-12">
                          <div class="mb-5">
                            <div class="text-center mb-4">
                              <a href="#!">
                              <img src="@Url.Content("~/assets/img/Login/logo.png")"
                                   alt="Hospital Logo"
                                   width="100"
                                   height="57" />
                              </a>
                            </div>
                            <h4 class="text-center">Forgot your password?</h4>
                            <p class="text-center text-secondary">
                              Enter your email and weâ€™ll send you a reset link
                            </p>
                          </div>
                        </div>
                      </div>

                      <form action="#!">
                        <div class="row gy-3 overflow-hidden">
                          <div class="col-12">
                            <div class="form-floating mb-3">
                              <input
                                type="email"
                                class="form-control"
                                name="email"
                                id="email"
                                placeholder="name@example.com"
                                required
                              />
                              <label for="email" class="form-label"
                                >Email address</label
                              >
                            </div>
                          </div>

                          <div class="col-12">
                            <div class="d-grid">
                              <button class="btn btn-dark btn-lg" type="submit">
                                Send Reset Link
                              </button>
                            </div>
                          </div>
                        </div>
                      </form>

                      <div class="row">
                        <div class="col-12">
                          <div
                            class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-5"
                          >
                            <a
                              asp-action="Login" asp-controller="Home"
                              class="link-secondary text-decoration-none"
                              >Back to Login</a>
                            <a asp-action="Signup" asp-controller="Home"
                              class="link-secondary text-decoration-none"
                              >Create a new account</a>
                            
                          </div>
                        </div>
                      </div>

                      <div class="row mt-4">
                        <div class="col-12 text-center">
                          <a
                            href="index.html"
                            class="btn btn-lg btn-outline-dark"
                          >
                            Return Home
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
