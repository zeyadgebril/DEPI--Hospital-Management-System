@model RoomAddEditVM
@{
    ViewData["Title"] = "Add";
    SelectList deptOption = new SelectList(Model.deptList, "Id", "Name");
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h1 class="text-center text-primary">Add Room</h1>
        <h4 class="text-secondary text-center">Fill in the details below</h4>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" asp-action="SaveAdd">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="RoomName" class="form-label fw-bold"></label>
                        <input asp-for="RoomName" class="form-control" placeholder="Enter Room's Name" />
                        <span asp-validation-for="RoomName" class="text-danger"></span>
                    </div>

                    
                    <div class="mb-3">
                        <label asp-for="DepartmentId" class="form-label fw-bold"></label>
                        <select class="form-select"
                                asp-for="DepartmentId"
                                asp-items="deptOption">
                            <option value="0" disabled selected>--Select Department--</option>
                            <!-- Populate this dynamically in the controller -->

                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save"></i> Create
                        </button>
                    </div>
                </form>
                <div class="mt-3 text-center">
                    <a asp-action="GetALL" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

