@{
    ViewData["Title"] = "Register Type";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-dark">Choose Your Role</h2>
        <p class="text-muted">Select the type of user you want to register as</p>
    </div>

    <div class="row g-4 justify-content-center">
        <!-- Doctor Card -->
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-lg rounded-4 h-100 text-center p-4 card-hover">
                <div class="icon-circle bg-primary text-white mx-auto mb-3">
                    <i class="bi bi-heart-pulse fs-2"></i>
                </div>
                <h5 class="fw-bold">Doctor</h5>
                <p class="text-muted small">Manage appointments, patient info, and medical records.</p>
                <a class="btn btn-outline-primary w-100 mt-3"
                   asp-controller="Account"
                   asp-action="Register"
                   asp-route-role="Doctor">
                   Register as Doctor</a>
            </div>
        </div>

        <!-- Patient Card -->
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-lg rounded-4 h-100 text-center p-4 card-hover">
                <div class="icon-circle bg-success text-white mx-auto mb-3">
                    <i class="bi bi-person-fill fs-2"></i>
                </div>
                <h5 class="fw-bold">Patient</h5>
                <p class="text-muted small">Book appointments and track your medical history.</p>
                <a class="btn btn-outline-success w-100 mt-3"
                   asp-controller="Account"
                   asp-action="Register"
                   asp-route-role="Patient">
                   >Register as Patient</a>
            </div>
        </div>

        <!-- Staff Card -->
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-lg rounded-4 h-100 text-center p-4 card-hover">
                <div class="icon-circle bg-warning text-white mx-auto mb-3">
                    <i class="bi bi-person-gear fs-2"></i>
                </div>
                <h5 class="fw-bold">Staff</h5>
                <p class="text-muted small">Assist with internal operations and patient support.</p>
                <a class="btn btn-outline-warning text-dark w-100 mt-3"
                   asp-controller="Account"
                   asp-action="Register"
                   asp-route-role="Staff">
                   >Register as Staff</a>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<!-- Custom Style -->
<style>
    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card-hover {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.1);
        }
</style>
