@model HospitalManagement.ViewModel.PAtientAddEditeVM

@{
    ViewData["Title"] = "Edit Patient";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h1 class="text-center text-warning">Edit Patient</h1>
        <h4 class="text-secondary text-center">Modify the patient details below</h4>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" asp-action="SaveEdit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Id" class="form-label fw-bold"></label>
                        <input asp-for="Id" class="form-control" readonly />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Patient Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DOB" class="form-label fw-bold"></label>
                        <input asp-for="DOB" type="date" class="form-control" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Gender" class="form-label fw-bold"></label>
                        <select asp-for="Gender" class="form-select">
                            <option value="">-- Select Gender --</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ContactInfo" class="form-label fw-bold"></label>
                        <input asp-for="ContactInfo" class="form-control" placeholder="Enter Contact Info" />
                        <span asp-validation-for="ContactInfo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label fw-bold"></label>
                        <input asp-for="Address" class="form-control" placeholder="Enter Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Image" class="form-label fw-bold"></label>
                        <input asp-for="Image" class="form-control" placeholder="Enter Image Path" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-pencil-square"></i> Save Changes
                        </button>
                    </div>
                </form>

                <div class="mt-3 text-center">
                    <a asp-action="GetAll" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
