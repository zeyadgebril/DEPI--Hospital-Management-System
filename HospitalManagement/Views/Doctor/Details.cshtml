@model Doctor

@{
    ViewData["Title"] = "Doctor Details";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="row g-4 align-items-center">
            <!-- صورة الدكتور -->
            <div class="col-md-4 text-center">
                <img src="~/Images/Doctor/@Model.Image" class="img-fluid rounded-3 border shadow" style="max-height: 300px;" alt="Doctor Image" />
            </div>

            <!-- تفاصيل الدكتور -->
            <div class="col-md-8">
                <h2 class="text-primary mb-3">@Model.Name</h2>
                <hr />
                <dl class="row fs-5">
                    <dt class="col-sm-4 fw-bold text-secondary">Specialty</dt>
                    <dd class="col-sm-8">@Model.Specialty</dd>

                    <dt class="col-sm-4 fw-bold text-secondary">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4 fw-bold text-secondary">Contact Info</dt>
                    <dd class="col-sm-8">@Model.ContactInfo</dd>

                    <dt class="col-sm-4 fw-bold text-secondary">Experience</dt>
                    <dd class="col-sm-8">@Model.ExperienceYears years</dd>

                    <dt class="col-sm-4 fw-bold text-secondary">Department</dt>
                    <dd class="col-sm-8">@Model.Department?.Name</dd>

                    <dt class="col-sm-4 fw-bold text-secondary">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </dd>
                </dl>

                <div class="mt-4">
                    <a asp-action="Edite" asp-controller="Doctor" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="GetAll" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
