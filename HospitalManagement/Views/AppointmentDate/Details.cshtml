@model Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary mb-3">Appointment Details</h2>
        <hr class="mb-4" />

        <dl class="row fs-5">
            <dt class="col-sm-3 fw-bold text-secondary">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Date</dt>
            <dd class="col-sm-9">@Model.AppointmentDate.ToString("f")</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Patient</dt>
            <dd class="col-sm-9">@Model.Patient.Name</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Doctor</dt>
            <dd class="col-sm-9">@Model.Doctor.Name</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Department</dt>
            <dd class="col-sm-9">@Model.Doctor?.Department?.Name</dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning me-2">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    </div>
</div>
