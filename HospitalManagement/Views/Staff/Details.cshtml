@model Staff

@{
    ViewData["Title"] = "Staff Details";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="row g-4 align-items-center">
            <!-- صورة الموظف -->
            <div class="col-md-4 text-center">
                <img src="~/Images/Patient/@Model.Image" class="img-fluid rounded-3 border shadow" style="max-height: 300px;" alt="Staff Image" />

            </div>

            <!-- تفاصيل الموظف -->
            <div class="col-md-8">
                <h2 class="text-primary mb-3">@Model.Name</h2>
                <hr />
                <dl class="row fs-5">
                    <dt class="col-sm-4 fw-bold text-secondary">Email</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4 fw-bold text-secondary">Contact Info</dt>
                    <dd class="col-sm-8">@Model.ContactInfo</dd>

                    <dt class="col-sm-4 fw-bold text-secondary">Address</dt>
                    <dd class="col-sm-8">@Model.address</dd>

                    <dt class="col-sm-4 fw-bold text-secondary">Role</dt>
                    <dd class="col-sm-8">@Model.Role</dd>

                   
                </dl>

                <div class="mt-4">
                    <a asp-action="GetAll" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
